#include <stdio.h>
#include <stdlib.h>

int main (void)
{
	int i;
	int suma=0;
	int prom=0;
	int max=0;
	int min=100;

for (i=1;i<=3;i++)

{	int aux;
	printf("ingrese un numero:");
	scanf("%d",&aux);
	suma=suma+aux;

	if (aux>max)
	{	aux=max;		}





}

printf("el numero final es: %d",suma);
prom=suma/5;
printf("el promedio final es: %d",prom);
printf("el numero maximo es: %d",max);

return 0;

}

















