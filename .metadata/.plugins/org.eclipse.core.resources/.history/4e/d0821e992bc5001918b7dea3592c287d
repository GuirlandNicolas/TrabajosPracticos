#include <stdio.h>
#include <stdlib.h>


int pidesuma(int* resultado);


int main(void) {

	int resultado;
	if (pidesuma(&resultado) == 0)
	{
	printf("El resultado es: %d",resultado);
	}
	else {
		printf ("ERROR");
	}
	return 0;
}

int pidesuma(int* resultado)
{
	int numero1;
	int numero2;
	printf("El primer numero es:");
	scanf("%d",&numero1);
	printf("El segundo numero es:");
	scanf("%d",&numero2);
	*resultado=numero1+numero2;
	return 0;
}

